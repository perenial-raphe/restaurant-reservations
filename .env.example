# NextAuth config
NEXTAUTH_SECRET=replace-with-a-long-random-string
NEXTAUTH_URL=http://localhost:3000

# SQLite database (Prisma)
DATABASE_URL="file:./dev.db"

# Business settings
BUSINESS_TIMEZONE=UTC
RESERVATION_DURATION_MINUTES=90

# Google Calendar (Service Account)
GOOGLE_CLIENT_EMAIL=service-account@your-project.iam.gserviceaccount.com
# IMPORTANT: If your private key has newline characters, replace each newline with \n
GOOGLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nREPLACE_WITH_ESCAPED_NEWLINES\n-----END PRIVATE KEY-----\n
GOOGLE_CALENDAR_ID=your-calendar-id@group.calendar.google.com

# SMTP for emails (Nodemailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-pass
FROM_EMAIL=reservations@example.com
FROM_NAME=Your Restaurant

# Reminder scheduling
REMINDER_HOURS_BEFORE=24
REMINDER_WINDOW_MINUTES=60
REMINDER_CRON_SECRET=change-me
